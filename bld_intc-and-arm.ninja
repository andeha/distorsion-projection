#  bld_intc-and-arm.ninja | a math library for macOS a․𝘬․a 𝙗𝙝𝙞𝙟𝙜.

optflags = -g
mac-library = lib{$UNISON}.a
objs = ./.objs/7704a312-558A-41ca-ab92-abcef8f81234_$mac-library
sha1git = `git log -1 '--pretty=format:%h'`
include identic-common.ninja
cflags = {$PLATFLAGS} $macosflags $moduleflags $optflags -DSHA1GIT=\"$sha1git\"

rule assemble-maclib
  command = ar rcs lib{$UNISON}\_$sha1git.a $in ; printf $sha1git

rule c
  command = $compiler-macos $cflags $gencdflags -c $in -o $out
  description = C2x $out
  depfile = $out.d
  deps = gcc

build $mac-library: assemble-maclib $objs/holc-comput.o                     $
 $objs/average-cattle.o $objs/exponen-illusi.o                              $
 $objs/fisku-audoi.o $objs/logic-sediment.o $objs/radio-boface.o            $
 $objs/sinuativ-sequent.o
build $objs/holc-comput.o: c satur-calculat.c
build $objs/average-cattle.o: c circula-convers.c
build $objs/exponen-illusi.o: c napier-exponen.c
build $objs/fisku-audoi.o: c abundan-invert.c
build $objs/logic-sediment.o: c iumoid-twothree.c
build $objs/radio-boface.o: c captu-radio.c
build $objs/sinuativ-sequent.o: c sequent-sinuativ.c
default lib{$UNISON}.a

